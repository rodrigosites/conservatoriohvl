<div class="page-header">
  <h2>Gerar Folha de Pagamento - Mês <%= Date.today.month %>/<%= Date.today.year %></h2>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Nº Aulas</th>
      <th>Valor</th>
      <th></th>
    </tr>
  </thead>
  <tfoot>
    <tr>
      <td></td>
      <td><b>Total:</b></td>
      <td><b><%= number_to_currency(@total_salarios) %></b></td>
      <td></td>
    </tr>
  </tfoot>
  <tbody>
    <% @folha_pagamento.each do |professor| %>
      <tr>
        <td><%= Professor.find(professor.professor_id).nome %></td>
        <td><%= professor.n_aulas %></td>
        <td><%= number_to_currency(professor.salario) %></td>
        <td><center><%= button_to "Visualizar Aulas", Professor.find(professor.professor_id), :class => "btn btn-primary btn-xs", :method => :get  %></center></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= button_to "Gerar Folha de Pagamento", salvar_folha_path, :class => "btn btn-primary", :method => :get  %>