<div class="page-header">
  <h2>Módulo de Administração</h2>
</div>

<%= form_for(@administracao, html: { class: "form-horizontal container", "role" => "form" }) do |f| %>
  <% if @administracao.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@administracao.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
      <% @administracao.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label "Circular Vigente:", class: "col-sm-0 control-label" %><br />
    <%= f.text_field :numero_circular, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label "Data da Circular:", class: "col-sm-0 control-label" %><br />
    <%= f.text_field :data_circular, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label "Valor Mensal do Curso Básico:", class: "col-sm-0 control-label" %><br />
    <%= f.text_field :valor_mensalidade, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label "Valor Mensal do Curso Extra:", class: "col-sm-0 control-label" %><br />
    <%= f.text_field :valor_extra, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label "Valor de Desconto:", class: "col-sm-0 control-label" %><br />
    <%= f.text_field :desconto, class: "form-control" %>
  </div>
  <div class="form-group">
    <br /><%= f.submit "Cadastrar", class: "btn btn-primary" %>
  </div>
<% end %>
