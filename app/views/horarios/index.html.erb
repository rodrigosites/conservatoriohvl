<h1>Lista de Horários</h1>

<table class="table">
  <thead>
    <tr>
      <th>Dia da Semana</th>
      <th>Horários</th>
      <th>Professor</th>
      <th>Aluno</th>
      <th>Curso</th>
      <th>Sala</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @horarios.order("dia, horario").each do |horario| %>
      <% horario.matriculas.each do |aluno| %>
        <tr>
          <td><%= dia(horario.dia) %></td>
          <td><%= hora(horario.horario) %></td>
          <td><%= horario.professor.nome %></td>
          <td><%= aluno.aluno.nome %></td>
          <td><%= horario.aulas.first.teoria ? "Teoria" : aluno.curso.nome %></td>
          <td><%= horario.sala.nome unless horario.sala.nil? %></td>
          <td><%= button_to 'Atribuir uma sala', edit_horario_path(horario), :class => "btn btn-default btn-xs", :method => :get  %></td>
          <td><%= button_to 'Desvincular Sala', remove_sala_path(id: horario.id), :class => "btn btn-default btn-xs" %></td>
        </tr>
        <% end %>
    <% end %>
  </tbody>
</table>
