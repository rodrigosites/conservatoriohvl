$('#teorica_horario_id').empty();
$('#teorica_horario_id').append( $('<option value>Selecione um horário</option>'));
<% if @horarios.any? %>
	<% tem_horario = false %>
	<% @horarios.each do |horario| %>
	  <% if !horario.matriculas.any? %>
	  	<% tem_horario = true %>
	  	$('#teorica_horario_id').append($('<option value="<%= horario.id %>"><%= dia(horario.dia) %> - <%= hora(horario.horario) %></option>'));
	  <% elsif horario.aulas.where(teoria: true).any? %>
	  	<% tem_horario = true %>
	  	$('#teorica_horario_id').append($('<option value="<%= horario.id %>"><%= dia(horario.dia) %> - <%= hora(horario.horario) %> - Classe</option>'));
	  <% end %>
	<% end %>
	<% unless tem_horario %>
		$('#teorica_horario_id').empty();
		$('#teorica_horario_id').append( $('<option value>Sem horários disponíveis</option>'));
	<% end %>
<% else %>
	$('#teorica_horario_id').empty();
	$('#teorica_horario_id').append( $('<option value>Sem horários disponíveis</option>'));
<% end %>