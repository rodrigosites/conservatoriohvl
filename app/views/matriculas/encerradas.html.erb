<div class="page-header">
  <h2>Lista de Matrículas Inativas <small>// matrículas inativas: <%= @inativas.size %></small></h2>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Aluno</th>
      <th>Curso</th>
      <th>Ano</th>
      <th>Teoria</th>
      <th>Valor Mensal</th>
      <th>Data da Matrícula</th>
      <th>Encerramento da Matrícula</th>
    </tr>
  </thead>

  <tbody>
    <% @inativas.each do |matricula| %>
      <tr>
        <td><%= matricula.aluno.nome %></td>
        <td><%= matricula.curso.nome %></td>
        <td><%= matricula.ano %>º Ano</td>
        <td><%= matricula.teoria_ano == 0 || matricula.teoria_ano == 99 ? "-" : "#{matricula.teoria_ano}º Ano" %></td>
        <td><%= number_to_currency(matricula.valor_mensal) %></td>
        <td><%= I18n.l(matricula.data_matricula.to_date) %></td>
        <td><%= I18n.l(matricula.termino_matricula.to_date) %></td>      
      </tr>
    <% end %>
  </tbody>
</table>