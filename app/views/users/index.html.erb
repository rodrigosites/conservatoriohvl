<h1>Lista de Usuários</h1>

<table class="table">
  <thead>
    <tr>
      <th>Usuário</th>
      <th>Senha Criptografada</th>
      <th>Salt</th>
      <th>Nível</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.crypted_password %></td>
        <td><%= user.salt %></td>
        <td><%= user.nivel %></td>
        <td><%= link_to 'Mostrar Perfil', user %></td>
        <td><%= link_to 'Editar Perfil', edit_user_path(user) %></td>
        <td><%= link_to 'Excluir', user, method: :delete, data: { confirm: "Tem certeza que deseja excluir o usuário #{user.username}?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Criar Novo Usuário', new_user_path %>
