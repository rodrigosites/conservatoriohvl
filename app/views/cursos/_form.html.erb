<%= form_for(@curso, html: { class: "form-horizontal container", "role" => "form" }) do |f| %>
  <% if @curso.errors.any? %>
    <% flash.now[:alert] = "Erro ao tentar salvar as informações." %>
      <b style="color: red">Problemas encontrados: </b><br>
    <% @curso.errors.full_messages.each do |msg| %>
      <li style="color: red"><b><%= msg %></b></li>
    <% end %>
  <% end %>
  <div class="form-group">
    <%= f.label "Nome:", class: "col-sm-0 control-label" %><br />
    <%= f.text_field :nome, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label "Valor Mensal:", class: "col-sm-0 control-label"  %><br />
    <%= f.text_field :valor, class: "form-control", value: Circular.where(vigente: true).first.valor_mensalidade %>
  </div>
  <div class="form-group">
    <%= f.label "Nº de Anos:", class: "col-sm-0 control-label" %><br />
    <%= f.text_field :anos, class: "form-control" %>
  </div>
  <div class="form-group">
    <br /><%= f.submit "Cadastrar", class: "btn btn-primary" %>
  </div>
<% end %>
