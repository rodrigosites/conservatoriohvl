<h2>Lista de Professores</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Professor</th>
      <th>Telefone</th>
      <th>Celular</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @professores.each do |professor| %>
      <tr>
        <td><%= professor.nome %></td>
        <td><%= professor.telefone %></td>
        <td><%= professor.celular %></td>
        <td><%= button_to 'Abrir Ficha', professor, :class => "btn btn-default btn-xs", :method => :get %></td>
        <td><%= button_to 'Editar Dados', edit_professor_path(professor), :class => "btn btn-default btn-xs", :method => :get %></td>
        <td><%= button_to 'Excluir', professor, :class => "btn btn-default btn-xs", :method => :delete, data: { confirm: "Tem certeza que deseja excluir o professor #{professor.nome}?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<b>Total de professores cadastrados: <%= @professores.size %></b>

<br /><br />

<%= button_to 'Cadastrar Novo Professor', new_professor_path, :class => "btn btn-default", :method => :get %>
