<%= form_for(@aluno, html: { class: "form-horizontal container", "role" => "form" }) do |f| %>
  <% if @aluno.errors.any? %>
    <% flash.now[:alert] = "Erro ao tentar salvar as informações." %>
      <b style="color: red">Problemas encontrados: </b><br>
    <% @aluno.errors.full_messages.each do |msg| %>
      <li style="color: red"><b><%= msg %></b></li>
    <% end %>
  <% end %>
  <div class="form-group">
    <%= f.label "Vinculado ao Cliente:", class: "col-sm-0 control-label" %><br />
    <%= f.collection_select :cliente_id, Cliente.order('nome'), :id, :nome, { include_blank: true }, class: "form-control" %>
  </div>
    <div class="form-group">
    <%= f.label "Aluno é o cliente?", class: "col-sm-0 control-label"  %><br />
    <input type="checkbox" id="aluno_cliente"> Sim<br>
  </div>
  <div class="form-group">
    <%= f.label "Nome:", class: "col-sm-0 control-label" %><br />
    <%= f.text_field :nome, class: "form-control" %>
  </div>
   <div class="form-group">
    <%= f.label "RG:", class: "col-sm-0 control-label" %><br />
    <%= f.text_field :rg, class: "form-control" %>
  </div>
  <div class="form-group">
      <%= f.label "CPF:", class: "col-sm-0  control-label" %><br />
      <%= f.text_field :cpf, class: "form-control" %>
  </div>
  <div class="form-group">
      <%= f.label "Celular:", class: "col-sm-0 control-label" %><br />
      <%= f.text_field :celular, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label "Data da Nascimento:", class: "col-sm-0 control-label" %><br />
    <% if action_name != "edit" %>
      <%= f.text_field :nascimento, class: "form-control" %>
    <% else %>
      <%= f.text_field :nascimento, class: "form-control", value: (data(@aluno.nascimento)) %>
    <% end %>
  </div>
  <div class="form-group">
      <%= f.label "Nacionalidade:", class: "col-sm-0 control-label" %><br />
      <%= f.text_field :nacionalidade, class: "form-control" %>
  </div>
  <div class="form-group">
      <%= f.label "Nome do Pai:", class: "col-sm-0 control-label" %><br />
      <%= f.text_field :pai, class: "form-control" %>
  </div>
  <div class="form-group">
      <%= f.label "Nome da Mãe:", class: "col-sm-0 control-label" %><br />
      <%= f.text_field :mae, class: "form-control" %>
  </div>
  <div class="form-group">
    <br /><%= f.submit "Cadastrar", class: "btn btn-primary" %>
  </div>
<% end %>
